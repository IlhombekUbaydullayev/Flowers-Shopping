<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingFlowers" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.ShoppingFlowers.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/pink</item>
    </style>

    <style name="progressBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/pink</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="circle">
        <item name="cornerSize">20%</item>
    </style>

    <style name="circle2">
        <item name="cornerSize">10%</item>
    </style>

    <style name="corner">
        <item name="cornerSize">50%</item>
    </style>
</resources>