<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash">

    <ImageView
        android:layout_width="@dimen/textSize110"
        android:layout_height="@dimen/textSize110"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/textSize5"
        android:layout_marginRight="@dimen/textSize20"
        android:layout_gravity="end|bottom"/>

    <LinearLayout
        android:layout_width="@dimen/textSize110"
        android:layout_height="@dimen/textSize110"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="@dimen/textSize5"
        android:layout_marginLeft="@dimen/textSize20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textColor="@color/pink"
            android:textSize="@dimen/textSizeTitle"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeTitle"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:text="Flowers"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeTitle"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:text="Shopping"/>
    </LinearLayout>
</FrameLayout>