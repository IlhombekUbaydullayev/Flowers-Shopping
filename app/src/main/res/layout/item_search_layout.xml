<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="SearchDataBinding">
        <variable
            name="products"
            type="com.boss.shoppingflowers.model.Products" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:outlineProvider="bounds"
        android:elevation="3dp"
        android:clipToPadding="false"
        android:layout_marginHorizontal="@dimen/_2sdp">
        <LinearLayout
            android:id="@+id/ll_onclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textSize115"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/customRoundedImageView"/>
                <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize12"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginTop="8dp"
                    android:textColor="#252424"
                    android:text="@{products.name}"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@{products.desc}"
                    android:textColor="#575454"
                    android:textSize="@dimen/textSize10" />

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize11"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/pinkDark"
                    android:text="@{products.sum}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_weight="0.6">
                    <ImageView
                        android:layout_width="@dimen/textSize16sp"
                        android:layout_height="@dimen/textSize16sp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:layout_width="@dimen/textSize16sp"
                        android:layout_height="@dimen/textSize16sp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:layout_width="@dimen/textSize16sp"
                        android:layout_height="@dimen/textSize16sp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:layout_width="@dimen/textSize16sp"
                        android:layout_height="@dimen/textSize16sp"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:layout_width="@dimen/textSize16sp"
                        android:layout_height="@dimen/textSize16sp"
                        android:src="@drawable/star2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>